{
  "type": "object",
  "title": "Common tools",
  "description": "Setting for the common tools",
  "jupyter.lab.metadataforms": [
    {
      "id": "commonTools",
      "label": "Common tools from schema",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/editable": {
            "title": "Editable",
            "type": "boolean",
            "default": true,
            "enumNames": ["Editable", "Read-Only"]
          },
          "/raw_mimetype": {
            "title": "Raw NBConvert Format",
            "type": "string",
            "default": "",
            "enum": ["", "pdf", "slides", "script", "notebook", "custom"],
            "enumNames": ["-", "PDF", "Slides", "Script", "Notebook", "Custom"]
          },
          "/slideshow/slide_type": {
            "title": "Slide Type",
            "type": "string",
            "default": "",
            "enum": ["", "slide", "subslide", "fragment", "skip", "notes"],
            "enumNames": [
              "-",
              "Slide",
              "Sub-Slide",
              "Fragment",
              "Skip",
              "Notes"
            ]
          },
          "/toc/base_numbering": {
            "title": "Table of content - Base number",
            "type": "integer"
          }
        }
      },
      "uiSchema": {
        "/editable": {
          "ui:widget": "select"
        }
      },
      "metadataOptions": {
        "/raw_mimetype": {
          "cellTypes": ["raw"]
        },
        "/toc/base_numbering": {
          "metadataLevel": "notebook"
        }
      }
    },
    {
      "id": "extendedTools",
      "label": "Extended tools from schema",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "UNUSED": {
            "title": "Cell metadata",
            "type": "null"
          },
          "UNUSED_": {
            "title": "Notebook metadata",
            "type": "null"
          }
        }
      },
      "metadataOptions": {
        "UNUSED": {
          "customField": "custom-cellMetadata"
        },
        "UNUSED_": {
          "customField": "custom-notebookMetadata"
        }
      }
    }
  ],
  "additionalProperties": false
}
